{
   "GET /api/general": {
      "content-type": "api::general.general",
      "roles": {
         "authenticated": {},
         "public": {
            "populate": {
               "heroSection": {
                  "fields": [
                     "heroTitle",
                     "heroSubTitle"
                  ],
                  "populate": {
                     "leftButton": {
                        "fields": [
                           "title",
                           "href",
                           "target"
                        ]
                     },
                     "rightButton": {
                        "fields": [
                           "target",
                           "href",
                           "title"
                        ]
                     },
                     "heroMedia": {
                        "fields": [
                           "name",
                           "alternativeText",
                           "caption",
                           "width",
                           "height",
                           "formats",
                           "size",
                           "url",
                           "previewUrl",
                           "documentId"
                        ]
                     }
                  }
               },
               "customerLogos": {
                  "fields": [
                     "sectionTitle"
                  ],
                  "populate": {
                     "customersLogos": {
                        "fields": [
                           "name",
                           "url"
                        ],
                        "populate": {
                           "logo": {
                              "fields": [
                                 "name",
                                 "alternativeText",
                                 "caption",
                                 "width",
                                 "height",
                                 "size",
                                 "url",
                                 "previewUrl",
                                 "documentId"
                              ]
                           }
                        }
                     }
                  }
               }
            },
            "fields": [
               "locale",
               "documentId"
            ]
         }
      }
   }
}